################################################################################
#ABOUT:                                                                        #
# This is a Makefile for medium sized C projects. It supports auxillary files  #
# in C++, but not main.c or test.c (yet).                                      #
################################################################################
#USAGE:                                                                        #
# $ make build (default)                                                       #
# > Builds the $(LIBRARY) if defined; Builds the $(BUILD_PROG) if defined.     #
# $ make test                                                                  #
# > Builds the $(TEST_PROG) ie the test suite.                                 #
# $ make clean                                                                 #
# > Removes all files generated in the build process                           #
######################################################################Colin 2024
#Config

#Directories
INC_DIR   := include/
SRC_DIR   := src/
OBJ_DIR   := obj/
BIN_DIR   := bin/

#Dependencies in $(INC_DIR):
HEADERS    = debug.h getline_noblock.h test.h uci.h xcommands.h xresponses.h xtokens.h
#Targets in $(OBJ_DIR):
OBJECTS    = getline_noblock.o uci.o
#Files generated by $(SCRIPTS)
GENERATE   = 
#Scripts to run before building; Found in $(BIN_DIR)
SCRIPTS    = 

#Outputs
LIBRARY    = #libengine.a
TEST_MAIN  = src/test.c
TEST_PROG  = ./test_suite
BUILD_MAIN = src/main.c
BUILD_PROG = ./flipflop

#Compiling flags
CFLAGS    := $(CFLAGS) -I$(INC_DIR)
CXXFLAGS  := $(CXXFLAGS) -I$(INC_DIR)
#Flag to build obj code
C_OBJ     := -c
CXX_OBJ   := -c
#Libraries to include in the build process
C_LIBS    := -lstdc++ -lpthread
################################################################################
#Magic
headers    = $(addprefix $(INC_DIR), $(HEADERS))
objects    = $(addprefix $(OBJ_DIR), $(OBJECTS))
scripts    = $(addprefix $(BIN_DIR), $(SCRIPTS))

build: generate $(LIBRARY) $(BUILD_PROG)

test: generate $(TEST_PROG) RUN_TEST

generate:
	$(foreach script, $(scripts), $(script))

$(LIBRARY): $(objects)
	$(AR) $(ARFLAGS) $@ $^

$(BUILD_PROG): $(objects) $(BUILD_MAIN)
	$(CC) $(CFLAGS) $^ $(C_LIBS) -o $@

$(TEST_PROG): $(objects) $(TEST_MAIN)
	$(CC) $(CFLAGS) $^ $(C_LIBS) -o $@

RUN_TEST:
	$(TEST_PROG)

#c code
$(OBJ_DIR)%.o: $(SRC_DIR)%.c $(headers)
	@mkdir -p $(OBJ_DIR)
	$(CC) $(C_OBJ) $(CFLAGS) $< -o $@

#c++ code
$(OBJ_DIR)%.o: $(SRC_DIR)%.cpp $(headers)
	@mkdir -p $(OBJ_DIR)
	$(CXX) $(CXX_OBJ) $(CXXFLAGS) $< -o $@

clean:
	$(RM) $(LIBRARY) $(TEST_PROG) $(BUILD_PROG)
	$(RM) $(GENERATE)
	$(RM) $(OBJECTS)
	$(RM) -R $(OBJ_DIR)

